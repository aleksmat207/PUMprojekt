<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.am.projektpum.Note">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:inputType="date"
        android:text="09.03.18"
        android:textAlignment="center"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="39dp"
        android:inputType="date"
        android:text="PT"
        android:textAlignment="center"
        android:textSize="80dp" />


    <Spinner
        android:id="@+id/spinnerNotifyTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b">

    </Spinner>

    <Button
        android:id="@+id/b"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="19dp"
        android:background="@drawable/ic_access_time_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerNotifyTime"
        android:layout_centerHorizontal="true"
        android:text="#TAG"
        android:textSize="80dp"
        android:id="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="treść"
        android:textSize="80dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView6"
        android:background="@color/yellow"
        android:id="@+id/button4" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView5"
        android:background="@color/green1"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/red" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/b"
        android:layout_below="@+id/textView6"
        android:background="@color/yellow"
        android:text="OK"
        android:id="@+id/btn_add_event_OK"/>
</RelativeLayout>
